{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "strict": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
